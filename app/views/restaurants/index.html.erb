<h1>My list of good restaurants</h1>
<% @restaurants.each do |restaurant| %>
  <h3><%= restaurant.name %> <%= link_to "More details", restaurant_path(restaurant), class: "btn btn-primary"%></h3>
  <p><%= restaurant.address %> <%= restaurant.category %></p>
<% end %>

<%= link_to "Add new restaurant", new_restaurant_path, class: "btn btn-primary" %>
